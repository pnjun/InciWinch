<Launch>:
    icon: 'checkbox-blank-circle'

    MDLabel:
        id: launchText
        font_style: 'Body1'
        theme_text_color: 'Primary'
        text: "Launch data here"
        halign: 'center'


NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Launches"
            on_release: app.root.ids.scr_mngr.current = 'Launches'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Settings"
            on_release: app.root.ids.scr_mngr.current = 'Settings'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "About"
            on_release: app.root.ids.scr_mngr.current = 'About'

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'InciWinch'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'Launches'
                MDTabbedPanel:
                    id: tab_panel
                    tab_display_mode:'text'

                    Launch:
                        text: 'TESTTAB'


            Screen:
                name: 'Settings'
                ScrollView:
                    do_scroll_x: False
                    MDList:
                        id: settingsList
                        TwoLineListItem:
                            id: serialPort
                            text: "Serial Port"
                            secondary_text: "Click to select"
                        OneLineListItem:
                            text: "Device List"
                        OneLineIconListItem:
                            text: "Some setting"
                        TwoLineIconListItem:
                            text: "Some setting"
                            secondary_text: "Some setting"
                        ThreeLineIconListItem:
                            text: "TSome setting"
                            secondary_text: "Some setting" + '\\n' + "Some setting"
            Screen:
                name: 'About'
                MDLabel:
                    font_style: 'Body1'
                    theme_text_color: 'Primary'
                    text: "InciWinch by Fabiano 'Incidente' Lever - Akaflieg Berlin"
                    halign: 'center'
