NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Launches"
            on_release: app.root.ids.scr_mngr.current = 'Launches'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Settings"
            on_release: app.root.ids.scr_mngr.current = 'Settings'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "About"
            on_release: app.root.ids.scr_mngr.current = 'About'

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'InciWinch'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'Launches'
                MDTabbedPanel:
                    id: tab_panel
                    tab_display_mode:'text'

                    MDTab:
                        name: 'music'
                        text: "Music" # Why are these not set!!!
                        icon: "playlist-play"
                        MDLabel:
                            font_style: 'Body1'
                            theme_text_color: 'Primary'
                            text: "Here is my music list :)"
                            halign: 'center'
                    MDTab:
                        name: 'movies'
                        text: 'Movies'
                        icon: "movie"

                        MDLabel:
                            font_style: 'Body1'
                            theme_text_color: 'Primary'
                            text: "Show movies here :)"
                            halign: 'center'
            Screen:
                name: 'Settings'
                ScrollView:
                    do_scroll_x: False
                    MDList:
                        id: ml
                        OneLineListItem:
                            text: "One-line item"
                        TwoLineListItem:
                            text: "Two-line item"
                            secondary_text: "Secondary text here"
                        ThreeLineListItem:
                            text: "Three-line item"
                            secondary_text: "This is a multi-line label where you can fit more text than usual"
                        OneLineIconListItem:
                            text: "Single-line item with left icon"
                        TwoLineIconListItem:
                            text: "Two-line item..."
                            secondary_text: "...with left icon"
                        ThreeLineIconListItem:
                            text: "Three-line item..."
                            secondary_text: "...with left icon..." + '\\n' + "and third line!"
            Screen:
                name: 'About'
                MDLabel:
                    font_style: 'Body1'
                    theme_text_color: 'Primary'
                    text: "InciWinch by Fabiano 'Incidente' Lever - Akaflieg Berlin"
                    halign: 'center'
